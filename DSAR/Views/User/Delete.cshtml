@model DSAR.Models.User

<h3>Are you sure you want to delete this user?</h3>
<div>
    <dl>
        <dt>Full Name:</dt>
        <dd>@Model.FullName</dd>
        <dt>Email:</dt>
        <dd>@Model.Email</dd>
    </dl>

    <form asp-controller="User" asp-action="DeleteConfirmed" method="post">
        
        
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="list">Cancel</a>
    </form>
</div>