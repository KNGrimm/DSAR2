    <h2>User List</h2>
    <table border="1">
        <thead>
            <tr>
                
                <th>FullName</th>
                
                <th>Email</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
          
                @foreach (var user in Model)
                {
                    <tr>
                       
                        <td>@user.FullName</td>
                        
                        <td>@user.Email</td>
                    <td>
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@user.UserId">Edit</a> <!-- ✅ Edit link -->
                    </td>
                    <td><a asp-controller="User" asp-action="Delete" asp-route-id="@user.UserId">Delete</a>
                        </td>
                    </tr>
                }
        
        </tbody>
    
</body>
</html>
